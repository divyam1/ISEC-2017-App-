<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_lnmiit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="dexter.com.isec17.activity.AboutLnmiitActivity">

    <LinearLayout
        android:id="@+id/aboutLnm_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAboutLnm_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_weight="1.2"
            android:text="The LNM Institute of Information Technology "
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_gravity="fill"
            android:layout_weight="3.8"
            android:layout_height="match_parent"
            android:src="@drawable/lnmiiticon" />
    </LinearLayout>


<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/aboutLnm_header"
android:layout_weight="9"
android:gravity="center"
android:padding="5sp"
android:text="@string/about_lnmiit_details"
android:textColor="@android:color/black"
android:textSize="17dp"
android:typeface="serif" /></LinearLayout>
